function check_email($email, $dbc) {
	$query = "SELECT user_id FROM forum_user WHERE email='$email'";
	$result = @mysqli_query($dbc, $query);

	if (mysqli_num_rows($result) == 0) {
		return FALSE;
		mysqli_free_result($dbc, $result);
	} else {
		return TRUE;
		mysqli_free_result($dbc, $result);
	}
}

function escape_data($data, $trim=TRUE) {
	global $dbc;

	if ($trim=FALSE) {
		return mysqli_real_escape_string($dbc, htmlspecialchars($data));
	} else 

	return mysqli_real_escape_string($dbc, htmlspecialchars(trim($data)));
}

function export_data($data, $trim=TRUE) {
	if ($trim=FALSE) {
		return stripslashes($data);
	} else 

	return stripslashes(trim($data));
}

